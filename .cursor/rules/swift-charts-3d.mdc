## ðŸ“± COMPLETE INTERACTIVE EXAMPLE

```swift
import SwiftUI
import Charts

struct Interactive3DSurfaceView: View {
    @State private var chartPose: Chart3DPose = .default
    
    let surfaceGradient = Gradient(colors: [
        .blue, .cyan, .green, .yellow, .orange, .red
    ])
    
    var body: some View {
        VStack {
            Text("Interactive 3D Surface")
                .font(.headline)
            
            Chart3D {
                SurfacePlot(
                    x: "X Value",
                    y: "Y Value",
                    z: "Result",
                    function: { x, y in
                        sin(sqrt(x*x + y*y)) / sqrt(x*x + y*y + 0.1)
                    }
                )
                .roughness(0.2)
            }
            .chart3DPose($chartPose)
            .frame(height: 400)
            
            Text("Drag to rotate")
                .font(.caption)
                .foregroundColor(.secondary)
            
            HStack {
                Button("Front") {
                    withAnimation { chartPose = .front }
                }
                Button("Top") {
                    withAnimation { chartPose = .top }
                }
                Button("Default") {
                    withAnimation { chartPose = .default }
                }
            }
            .buttonStyle(.bordered)
        }
        .padding()
    }
}
```

