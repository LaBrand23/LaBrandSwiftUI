{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "../brand-portal/node_modules",
    "paths": {
      "@shared/*": ["../../shared/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
